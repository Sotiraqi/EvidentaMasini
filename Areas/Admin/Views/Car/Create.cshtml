@using EvidentaMasini.Models
@model Car
@{
    ViewData["Title"] = "Create";

    <h2 class="text-info">Add New Car</h2>
    <form asp-action="Create" method="post" enctype="multipart/form-data">
        <div class="p-4 rounded border">
            <div asp-validation-summary="ModelOnly" class="text-danger">

            </div>
            <h3>@ViewBag.message</h3>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="vin">Numar de sasiu: </label>
                </div>
                <div class="col-5">
                    <input asp-for="vin" class="form-control" />
                </div>
                <span asp-validation-for="vin" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="make">Marca: </label>
                </div>
                <div class="col-5">
                    <input asp-for="make" class="form-control" />
                </div>
                <span asp-validation-for="make" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="tip">Tip: </label>
                </div>
                <div class="col-5">
                    <input asp-for="tip" class="form-control" />
                </div>
                <span asp-validation-for="tip" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="model">Model: </label>
                </div>
                <div class="col-5">
                    <input asp-for="model" class="form-control" />
                </div>
                <span asp-validation-for="model" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="carCombustionId">Combustibil: </label>
                </div>
                <div class="col-5">
                    <select asp-for="carCombustionId" asp-items="ViewBag.carCombustionId" class="form-control"></select>
                    @*<input asp-for="productCategoryId" class="form-control"/>*@
                </div>
                <span asp-validation-for="carCombustionId" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="capacity">Capacitatea cilindrica: </label>
                </div>
                <div class="col-5">
                    <input asp-for="capacity" class="form-control" />
                </div>
                <span asp-validation-for="capacity" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="weight">Masa maxima autorizata: </label>
                </div>
                <div class="col-5">
                    <input asp-for="weight" class="form-control" />
                </div>
                <span asp-validation-for="weight" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="color">Culoarea: </label>
                </div>
                <div class="col-5">
                    <input asp-for="color" class="form-control" />
                </div>
                <span asp-validation-for="color" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="power">Puterea (kW): </label>
                </div>
                <div class="col-5">
                    <input asp-for="power" class="form-control" />
                </div>
                <span asp-validation-for="power" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="civ">CIV: </label>
                </div>
                <div class="col-5">
                    <input asp-for="civ" class="form-control" />
                </div>
                <span asp-validation-for="civ" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="plates">Numerele de inmatriculare: </label>
                </div>
                <div class="col-5">
                    <input asp-for="plates" class="form-control" />
                </div>
                <span asp-validation-for="plates" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="registration">Data ultimii inmatricularii: </label>
                </div>
                <div class="col-5">
                    <input asp-for="registration" class="form-control" />
                </div>
                <span asp-validation-for="registration" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="owner">Proprietar: </label>
                </div>
                <div class="col-5">
                    <input asp-for="owner" class="form-control" />
                </div>
                <span asp-validation-for="owner" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="revision">Revizie ITP: </label>
                </div>
                <div class="col-5">
                    <input asp-for="revision" class="form-control" />
                </div>
                <span asp-validation-for="revision" class="text-danger"></span>
            </div>            
            <div class="form-group">
                <input type="submit" class="btn btn-primary" value="Save" />
                <a asp-action="Index" class="btn btn-success">Back to List</a>
            </div>
        </div>
    </form>
}

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

