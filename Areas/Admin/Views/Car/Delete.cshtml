@using EvidentaMasini.Models
@model Car
@{
    ViewData["Title"] = "Delete";

    <h2 class="text-info">Product Delete</h2>
    <form asp-action="Delete" method="post" enctype="multipart/form-data">
        <div class="p-4 rounded border row">
            <div asp-validation-summary="ModelOnly" class="text-danger">

            </div>
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="vin">Numar de sasiu: </label>
                    </div>
                    <div class="col-8">
                        <input type="hidden" asp-for="vin" />
                        <input asp-for="vin" readonly="readonly" class="form-control" />
                    </div>
                    <span asp-validation-for="vin" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="make">Marca: </label>
                    </div>
                    <div class="col-8">
                        <input asp-for="make" readonly="readonly" class="form-control" />
                    </div>
                    <span asp-validation-for="make" class="text-danger"></span>
                </div>                
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="tip">Tip: </label>
                    </div>
                    <div class="col-8">
                        <input asp-for="tip" readonly="readonly" readonly="readonly" class="form-control" />
                    </div>
                    <span asp-validation-for="tip" class="text-danger"></span>
                </div>                       
                <div class="form-group">
                    <h3>Do you want to delete this product ?</h3>
                    <input type="submit" asp-action="Delete" asp-route-id="@Model.vin" class="btn btn-danger" value="Delete" />
                    <a asp-action="Index" class="btn btn-success">Back to List</a>
                </div>
            </div>
            <div class="col-1"></div>            
        </div>
    </form>
}

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

